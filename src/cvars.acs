#library "cvars"
#include "zcommon.acs"

Script "SkullyHUD_Barless" ENTER
{
	while (true)
	{
		if(GetCVar("sthud_barless") == 1)
		{
			GiveInventory("STHUD_Barless", 1);
		}
		
		else if(GetCVar("sthud_barless") == 0)
		{
			TakeInventory("STHUD_Barless", 1);
		}
		Delay(25);
	}
}

